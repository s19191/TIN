<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Lista książek</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Data wydania</th>
            <th class="list-actions">Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let ks of ksiazki) { %>
            <tr>
                <td><%= ks.Tytul %></td>
                <td><%= ks.Autor %></td>
                <td><%= ks.DataWydania.toISOString().split('T')[0] %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/ksiazka/details/<%=ks.Id_Ksiazka%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li><a href="/ksiazka/edit/<%=ks.Id_Ksiazka%>" class="list-actions-button-edit">Edytuj</a></li>
                        <li><a href="/ksiazka/delete/<%=ks.Id_Ksiazka%>" class="list-actions-button-delete">Usuń</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/ksiazka/add" class="button-add">Dodaj nową książkę</a></p>
</main>
<%- include('../../fragments/footer.ejs') %>