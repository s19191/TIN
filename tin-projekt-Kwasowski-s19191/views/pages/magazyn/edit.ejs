<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Edytuj dane o magazynie</h2>
    <form class="form" novalidate onsubmit="return validateForm()">
        <label for="name">Nazwa:<abbr title="required" aria-label="required">*</abbr></label>
        <input type="text" name="name" placeholder="2-60 znaków" value="Magazyn na górce" id="name">
        <span id="errorName" class="errors-text"></span>
        <label for="adress">Adres:<abbr title="required" aria-label="required">*</abbr></label>
        <input type="text" name="adress" placeholder="np. ul. Gorka 15/67" value="ul. Gorka 15/67" id="adress">
        <span id="errorAdress" class="errors-text"></span>
        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text"></p>
            <input type="submit" class="form-button-submit" value="Dodaj" />
            <a href="/magazyn" class="form-button-cancel">Anuluj</a>
        </div>
    </form>
</main>
<%- include('../../fragments/footer.ejs') %>