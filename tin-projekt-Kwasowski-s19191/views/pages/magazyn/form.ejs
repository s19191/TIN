<%- include('../../fragments/header.ejs') %>
<main>
    <h2><%= pageTitle %></h2>
<!--    <form class="form" method="post" action="<%=formAction%>" novalidate onsubmit="return validateForm();">-->
        <form class="form" method="post" action="<%=formAction%>" novalidate>
        <input type="hidden" name="Id_Magazyn" value="<%= mag.Id_Magazyn %>">
        <label for="Nazwa">Nazwa:<abbr title="required" aria-label="required">*</abbr></label>
        <input type="text" name="Nazwa" placeholder="2-60 znaków" id="Nazwa" value="<%= mag.Nazwa %>"
                <%= (formMode == 'showDetails') ? 'disabled' : '' %>
               class="<%= validationErrors.find(e => e.path.includes('Nazwa')) ? 'error-input' : '' %>"
        />
        <span id="errorName" class="errors-text">
            <% if (validationErrors.find(e => e.path.includes('Nazwa'))) { %>
                <%= validationErrors.find(e => e.path.includes('Nazwa')).message %>
            <% } %>
        </span>
        <label for="Adres">Adres:<abbr title="required" aria-label="required">*</abbr></label>
        <input type="text" name="Adres" placeholder="np. ul. Gorka 15/67" id="Adres" value="<%= mag.Adres %>"
                <%= (formMode == 'showDetails') ? 'disabled' : '' %>
               class="<%= validationErrors.find(e => e.path.includes('Adres')) ? 'error-input' : '' %>"
        />
        <span id="errorAdress" class="errors-text">
            <% if (validationErrors.find(e => e.path.includes('Adres'))) { %>
                <%= validationErrors.find(e => e.path.includes('Adres')).message %>
            <% } %>
        </span>
        <% if (formMode != 'showDetails') { %>
        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text"></p>
            <input type="submit" class="form-button-submit" value="<%=btnLabel%>"/>
            <a href="/magazyn" class="form-button-cancel">Anuluj</a>
            <% } %>
        </div>
    </form>
    <% if (formMode == 'showDetails') { %>
        <p><a href="/magazyn/edit/<%= mag.Id_Magazyn %>" class="list-actions-button-edit">Edytuj</a></p>
    <% } %>
    <% if (formMode == 'showDetails' || formMode == 'edit') { %>
        <h2>Szczegóły książek</h2>
        <table class="table-list">
            <thead>
            <tr>
                <th>Tytuł książki</th>
                <th>Ilość na stanie</th>
                <th>Cena hurtowa</th>
                <th>Minimalna ilość zamówienia potrzebna do naliczenia ceny hurowej</th>
                <th>Cena detaliczna</th>
            </tr>
            </thead>
            <tbody>
            <% for (let m of mag.stanyWMagazynach) { %>
                <tr>
                    <td><a href="/ksiazka/details/<%= m.ksiazka.Id_Ksiazka %>"><%= m.ksiazka.Tytul %></a></td>
                    <td><%= m.IloscNaStanie %></td>
                    <td><%= m.CenaHurtowa %></td>
                    <td><%= m.MinimalnaIloscDoCenyHurtowej %></td>
                    <td><%= m.CenaDetaliczna %></td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <p><a href="/magazyn" class="list-actions-button-details">Powrót</a></p>
    <% } %>
</main>
<%- include('../../fragments/footer.ejs') %>